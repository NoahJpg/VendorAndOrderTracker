@{
  Layout = "_Layout";
}

@using VendorAndOrderTracker.Models;

<h1>- Vendors -</h1>
<hr>

@if (@Model.Count == 0)
{
  <h3><em>No vendors have been added yet</em></h3>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
  <p><a href='/vendors/@vendor.Id/orders/new'>Make a new order for @vendor.Name</a></p>
  <hr>
}

<hr>

<p><a href="/vendors/new">Add new Vendor</a></p>
<p><a href="/">Return to Home Page</a></p>

