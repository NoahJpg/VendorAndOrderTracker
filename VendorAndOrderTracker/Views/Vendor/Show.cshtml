@{
  Layout = "_Layout";
}

@using VendorAndOrderTracker.Models;

<h2>@Model["vendor"].Name</h2>

<p>@Model["vendor"].Description</p>
<hr> 


@if (@Model["order"].Count == 0)
{
  <h3><em>No Orders have been made yet</em></h3>
}
else
{
    <h3>Vendor Orders:</h3>
    <br>
    <ul>
      @foreach (Order Order in @Model["order"])
    {
      <li><a href='/vendors/@Model["vendor"].Id/orderInfo/@Order.Id'>@Order.Title</a></li>
    }
  </ul>
}


<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new Order</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Return to Home Page</a></p>