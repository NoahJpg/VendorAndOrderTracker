@{
    Layout = "_Layout";
}

<h1>Vendor And Order Tracker Order Details: </h1>

<h2>@Model["order"][0].Title</h2>
<h4>@Model["order"][0].Description</h4>
<p>Price: @Model["order"][0].Price</p>
<p>Delivery Date: @Model["order"][0].Date</p>
<p>Vendor: @Model["vendor"].Name</p>
<br>

<a href='/vendors/@Model["vendor"].Id/orders/new'>Add another order</a>
<br>
<a href='/vendors'>View all orders</a>
