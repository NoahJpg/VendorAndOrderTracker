@{
    Layout = "_Layout";
}

<h1>Add a new order to @Model.Name</h1>

<form action="/vendors/@Model.Id/orderInfo" method="post">
    <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">

    <label for="orderTitle">Title</label>
    <input id="orderTitle" name="orderTitle" type="text" required><br>

    <label for="orderDescription">Description</label>
    <textarea id="orderDescription" name="orderDescription" required></textarea><br>

    <label for="orderPrice">Price</label>
    <input id="orderPrice" name="orderPrice" type="number" required><br>

    <label for="orderDate">Date and Time</label>
    <input id="orderDate" name="orderDate" type="datetime-local" required><br>

    <button type="submit">Add Order</button>
</form>
